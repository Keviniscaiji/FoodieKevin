<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <TextView

        android:id="@+id/et_comment_item_un"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_comment"
        android:text="UserName:"
        android:textColor="@color/black"
        android:textSize="30dp"></TextView>
    <TextView
        android:id="@+id/et_comment_item_rt"
        android:layout_toRightOf="@id/et_comment_item_un"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="Mark:"
        android:background="@drawable/edittext_comment">
    </TextView>

    <TextView
        android:id="@+id/et_comment_item_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_comment_item_un"
        android:background="@drawable/edittext_comment"
        android:textColor="@color/black"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/et_comment_item_rate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_comment_item_rt"
        android:layout_toRightOf="@id/et_comment_item_username"
        android:background="@drawable/edittext_comment"
        android:textColor="@color/black"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/et_comment_item_tt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_comment_item_username"
        android:background="@drawable/edittext_comment"
        android:gravity="left"
        android:text="Title:"
        android:textColor="@color/black"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/et_comment_item_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_comment_item_username"
        android:layout_toRightOf="@id/et_comment_item_tt"
        android:background="@drawable/edittext_comment"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="30dp"></TextView>
</RelativeLayout>